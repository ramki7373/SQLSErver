SELECT column_name
FROM table_name;

-- Example:
SELECT employee_name
FROM employees;
ðŸ”¹ **SELECT *** â€“ Returns all columns from a table

SELECT *
FROM table_name;

-- Example:
SELECT *
FROM employees;
ðŸ”¹ SELECT DISTINCT â€“ Returns only unique (non-duplicate) values

SELECT DISTINCT column_name
FROM table_name;

-- Example:
SELECT DISTINCT department
FROM employees;
ðŸ”¹ SELECT INTO â€“ Copies data from one table to a new table

SELECT *
INTO new_table
FROM existing_table;

-- Example:
SELECT *
INTO employees_backup
FROM employees;
ðŸ”¹ SELECT TOP â€“ Returns the first N rows or a percentage of rows

-- Top N rows:
SELECT TOP 5 *
FROM table_name;

-- Top N percent:
SELECT TOP 10 PERCENT *
FROM table_name;

-- Example:
SELECT TOP 10 *
FROM employees;
ðŸ”¹ AS (Alias) â€“ Renames a column or table temporarily

SELECT column_name AS alias_name
FROM table_name;

-- Example:
SELECT employee_name AS name
FROM employees;
ðŸ”¹ FROM â€“ Specifies the table to query

SELECT column_name
FROM table_name;

-- Example:
SELECT salary
FROM employees;
ðŸ”¹ WHERE â€“ Filters results based on a condition

SELECT column_name FROM table_name
WHERE condition;

-- Example:
SELECT employee_name
FROM employees
WHERE department = 'HR';
ðŸ”¹ AND â€“ Returns rows if all conditions are true

SELECT column_name
FROM table_name
WHERE condition1 AND condition2;

-- Example:
SELECT employee_name
FROM employees
WHERE department = 'HR' AND salary > 50000;
ðŸ”¹ OR â€“ Returns rows if any condition is true

SELECT column_name
FROM table_name
WHERE condition1 OR condition2;

-- Example:
SELECT employee_name
FROM employees
WHERE department = 'HR' OR department = 'Finance';
ðŸ”¹ BETWEEN â€“ Filters rows within a range (inclusive)

SELECT column_name
FROM table_name
WHERE column_name BETWEEN value1 AND value2;

-- Example:
SELECT employee_name
FROM employees
WHERE salary BETWEEN 40000 AND 60000;
ðŸ”¹ LIKE â€“ Searches for a pattern in a column

SELECT column_name
FROM table_name
WHERE column_name LIKE 'pattern';

-- Example:
SELECT employee_name
FROM employees
WHERE employee_name LIKE '%son';
